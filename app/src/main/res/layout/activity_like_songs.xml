<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".likeSongsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/collect_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="喜欢的歌"
            android:textColor="#ff2a2a2a"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:background="#EB5741"
        app:layout_constraintTop_toBottomOf="@+id/pick_toolbar" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff">

        <ImageButton
            android:id="@+id/collectPlayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="28dp"
            android:background="#fff"
            android:src="@mipmap/seek_next" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:text="全部播放"
            android:textColor="#ff2a2a2a"
            android:textSize="15sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="#fff"
            android:src="@mipmap/seek_next" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            tools:layout_editor_absoluteX="0dp">

        </android.support.v7.widget.RecyclerView>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#4d000000">

        <SeekBar
            android:id="@+id/collectSeekBar"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="14dp"
            android:maxHeight="2dp"
            android:progressDrawable="@drawable/seek_style"
            android:thumbTint="@android:color/holo_orange_dark" />

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="29dp"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:text="歌曲名字" />

        <TextView
            android:id="@+id/singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="87dp"
            android:layout_marginTop="44dp"
            android:textColor="#ffffffff"
            android:textSize="9sp"
            android:text="歌手名字" />

        <ImageView
            android:id="@+id/cover_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/like" />

        <ImageButton
            android:id="@+id/pause_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="267dp"
            android:layout_marginTop="29dp"
            android:background="@mipmap/dislike" />

        <ImageButton
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="309dp"
            android:layout_marginTop="33dp"
            android:background="@mipmap/seek_next" />
        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="344dp"
            android:layout_marginTop="33dp"
            android:background="@mipmap/seek_next" />
    </RelativeLayout>
</LinearLayout>