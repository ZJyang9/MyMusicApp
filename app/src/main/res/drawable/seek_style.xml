<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 背景效果 -->

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <!-- angle 是角度 -->
            <gradient
                android:angle="270"
                android:centerColor="#CDCCCC"
                android:centerY="0.5"
                android:endColor="#CDCCCC"
                android:startColor="#CDCCCC" />
        </shape>
    </item>

    <!-- 第一进度条 -->

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#323434"
                    android:centerY="0.5"
                    android:endColor="#323434"
                    android:startColor="#323434" />
            </shape>
        </clip>
    </item>
</layer-list>